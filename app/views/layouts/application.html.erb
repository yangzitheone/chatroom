<!DOCTYPE html>
<html>
<head>
  <title><%= yield(:title) %> | Strikingly</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
<body>
<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <%= link_to root_path, class: "navbar-brand" do %>
          Home
      <% end %>
    </div>

    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
            <%= yield :right_nav %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= current_user.username %> <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to "Loginout", destroy_user_session_path, method: :delete %></li>
              </ul>
            </li>
        <% else %>
            <li><%= link_to "Sign Up", new_user_registration_path %></li>
            <li><%= link_to "Login", new_user_session_path %></li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>

<div class="fluid-container" style="margin-top: 70px">
  <div class="row">
    <div class="col-sm-2" style="position: fixed; top: 70px; left: 0;">
      <% if user_signed_in? %>
          <h5>My chatrooms</h5>
          <ul>
            <% current_user.chatrooms.get_public_chatrooms.each do |chatroom| %>
                <li><%= link_to chatroom.roomname, chatroom, data: {behavior: "chatrooms-link", chatroom_id: chatroom.id} %></li>
            <% end %>
          </ul>

          <h5>Users</h5>
          <ul>
            <% (User.all - [current_user]).each do |user| %>
                <li><%= link_to user.username, private_chat_path(user.id) , data: {behavior: "chatrooms-link"} %></li>
            <% end %>
          </ul>
      <% end %>
    </div>
  </div>
</div>
<div class="col-sm-10 col-sm-offset-2" style="position: fixed; top: 40px; left: 450px;">
  <%= yield %>
</div>
</body>
</html>
